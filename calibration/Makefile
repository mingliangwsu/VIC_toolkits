MAKEFILE      = Makefile.Debug

####### Compiler, tools and options

CC            = gcc
CXX           = gcc
CFLAGS        = -g -std=c99 -Wall -Wextra -fopenmp $(DEFINES)
CXXFLAGS      = -g -std=c++0x -Wall -Wextra -fexceptions -fopenmp $(DEFINES)
INCPATH       = -I..\calibration -I. -I..\..\sources 
LINKER      =        gcc
LFLAGS        = -fopenmp 
DEL_FILE      = rm

####### Output directory

####### Files

SOURCES       = MOCOM.c 
OBJECTS       = MOCOM.o

DESTDIR_TARGET = calibration.exe


####### Implicit rules

.SUFFIXES: .cpp .cc .cxx .c

.cpp.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.cc.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.cxx.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.c.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

####### Build rules

$(DESTDIR_TARGET):  $(OBJECTS) 
	$(LINKER) $(LFLAGS) -o $(DESTDIR_TARGET) $(OBJECTS)  $(LIBS)

clean:  
	-$(DEL_FILE) MOCOM.o $(DESTDIR_TARGET)

####### Compile

MOCOM.o: MOCOM.c MOCOM.h
	$(CC) -c $(CFLAGS) $(INCPATH) -o MOCOM.o MOCOM.c


